<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: Disallow cleartext (HTTP) traffic globally -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust only system certificate authorities -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Domain-specific configuration for API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.myecommerce.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Debug configuration (optional: allow localhost for development) -->
    <!-- Uncomment for debug builds if needed
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    -->
</network-security-config>
