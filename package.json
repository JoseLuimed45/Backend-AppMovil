{
  "name": "app-ajicolor-backend-tests",
  "version": "1.0.0",
  "description": "Tests unitarios y de integraci√≥n para App Ajicolor Backend",
  "scripts": {
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:auth": "jest tests/auth.test.js",
    "test:products": "jest tests/products.test.js",
    "test:orders": "jest tests/orders.test.js",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage --coverageReporters=html",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/**/node_modules/**",
      "!api/**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3"
  }
}
